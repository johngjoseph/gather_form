        <a href="/">
        <span style="font-size:xx-large; font-weight:bolder; font-family:Arial">‚úç</span>
        <span style="font-size:x-large;">Gather</span>
        </a>
    </div>  
    <div id="logindisplay" style="color:#000">
    	<% if user_signed_in? %>
    		<%= current_user.email%>
  			<%= link_to('Logout', destroy_user_session_path) %>        
		<% else %>
  			<%= link_to('Login', new_user_session_path)  %>  
		<% end %>
    </div> 
</div>
<div class="page" >
    <div id="main">
    	<p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
            <%= yield %>
    </div>
</div>
